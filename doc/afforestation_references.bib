	pages = {177--195},
	file = {Pongratz et al. - 2014 - Terminology as a key uncertainty in net land use a.pdf:/home/lou059/Zotero/storage/ZGDRJA7R/Pongratz et al. - 2014 - Terminology as a key uncertainty in net land use a.pdf:application/pdf},
