	journal = {Earth System Dynamics},
	author = {Winckler, Johannes and Reick, Christian H. and Luyssaert, Sebastiaan and Cescatti, Alessandro and Stoy, Paul C. and Lejeune, Quentin and Raddatz, Thomas and Chlond, Andreas and Heidkamp, Marvin and Pongratz, Julia},
